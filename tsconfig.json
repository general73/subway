{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "node_modules/typescript/lib/lib.es2015.promise.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}

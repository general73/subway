{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "node_modules/typescript/lib/lib.es2015.promise.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "custom_typings"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "cacheDirectory": ".tmp/tscache",
    "silent": true,
    "useTranspileModule": false,
    "transpileOnly": false
  }
}
